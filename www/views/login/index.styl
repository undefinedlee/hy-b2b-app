#login
	.login-panel
		background: #fff url(bg.png) no-repeat 50% 0
		background-size: auto 100%
	.login-box
		position: absolute
		top: 30%
		margin-top: -90px
		width: 100%
		background-color: rgba(0, 0, 0, 0.5)
		.logo-bar
			margin-bottom: 20px
			padding: 20px 0
			background-color: rgba(0, 0, 0, 0.15)
			border-bottom: 0.5px solid rgba(255, 255, 255, .2)
			box-shadow: 0 0.5px 0 rgba(255, 255, 255, .2)
		.logo
			display: block
			width: 247px
			height: 48px
			background: url(logo.png) no-repeat 0 0
			background-size: 247px auto
			margin: 0 auto
		.input-item
			position: relative
			border-bottom: 0.5px solid #fff
			box-shadow: 0 0.5px 0 #fff
			margin: 0 20px 15px
			.name
				position: absolute
				left: 0
				top: 0
				width: 50px
				height: 46px
				line-height: 40px
				text-align: center
				color: #fff
				&:before
					font-size: 30px
			input
				width: 100%
				height: 46px
				line-height: 46px
				padding-left: 50px
				color: #fff
				font-size: 24px
				background-color: transparent
		.submit-btn
			display: block
			height: 46px
			line-height: 46px
			text-align: center
			font-size: 18px
			background-color: #f90
			color: #fff
			border-radius: 3px
			margin: 20px
			text-decoration: none
		.copy-right
			position: absolute
			left: 0
			bottom: -50px
			width: 100%
			text-align: center
			font-size: 12px
			color: #fff
			margin-top: 20px
.platform-ios9
	#login
		.login-box
			background-color: rgba(255, 255, 255, 0.05)
			-webkit-backdrop-filter: blur(10px)
			border-top: 0.5px solid rgba(255, 255, 255, 0.3)
			border-bottom: 0.5px solid rgba(255, 255, 255, 0.1)
			box-shadow: 0 5px 15px rgba(0, 0, 0, .5)
			.logo-bar
				background-color: rgba(255, 255, 255, 0.2)
				border-bottom: none
				box-shadow: none