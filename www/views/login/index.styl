#login
	.login-panel
		background: #000
	.login-panel-bg
		position: fixed
		left: -30px
		right: -30px
		top: -30px
		bottom: -30px
		background: #fff url(bg12.jpg) no-repeat 58% 0
		background-size: auto 100%
		-webkit-filter: blur(30px)
	.login-box
		position: absolute
		top: 30%
		margin-top: -90px
		width: 100%
		background-color: rgba(255, 255, 255, 0.2)
		transform: translate3d(0, 0, 0)
		transition: 200ms ease transform
		.logo-bar
			margin-bottom: 20px
			padding: 20px 0
			background-color: rgba(255, 255, 255, 0.1)
		.logo
			display: block
			width: 247px
			height: 48px
			background: url(logo3.png) no-repeat 0 0
			background-size: 247px auto
			margin: 0 auto
		.input-item
			position: relative
			border-bottom: 0.5px solid rgba(255, 255, 255, 0.8)
			box-shadow: 0 0.5px 0 rgba(255, 255, 255, 0.8)
			margin: 0 20px 15px
			.name
				position: absolute
				left: 0
				top: 0
				width: 50px
				height: 46px
				line-height: 40px
				text-align: center
				color: #fff
				&:before
					font-size: 30px
			input
				width: 100%
				height: 46px
				line-height: 46px
				padding-left: 60px
				color: #fff
				font-size: 24px
				background-color: transparent
				&::-webkit-input-placeholder
					color: rgba(255, 255, 255, 0.5)
		.submit-btn
			display: block
			height: 46px
			line-height: 46px
			text-align: center
			font-size: 18px
			background-color: #503166
			color: #fff
			border-radius: 3px
			margin: 20px
			text-decoration: none
		.copy-right
			position: absolute
			left: 0
			bottom: -50px
			width: 100%
			text-align: center
			font-size: 12px
			color: #fff
			margin-top: 20px
	.loading-box
		position: fixed
		left: 0
		right: 0
		top: 0
		bottom: 0
		transform: translate3d(-100%, 0, 0)
		transition: 200ms ease transform
		text-align: center
		svg
			position: absolute
			top: 50%
			left: 50%
			width: 60px
			height: 60px
			fill: #fff
			margin: -30px 0 0 -30px
	.has-login
		.login-box
			transform: translate3d(100%, 0, 0)
		.loading-box
			transform: translate3d(0, 0, 0)
	.error-message
		margin: -10px 20px 20px
		font-size: 12px
		color: #c00
		text-align: center
.platform-ios9-back
	#login
		.login-box
			background-color: rgba(255, 255, 255, 0.05)
			-webkit-backdrop-filter: blur(10px)
			border-top: 0.5px solid rgba(255, 255, 255, 0.3)
			border-bottom: 0.5px solid rgba(255, 255, 255, 0.1)
			box-shadow: 0 5px 15px rgba(0, 0, 0, .5)
			.logo-bar
				background-color: rgba(255, 255, 255, 0.2)
				border-bottom: none
				box-shadow: none
			.logo
				background-image: url(logo.png)