#order-info
	color: #333
	h3
	p
		margin: 0
		line-height: 30px
	h3
		color: #333
		font-weight: normal
		font-size: 14px
	.order-info
		position: relative
		padding: 10px 15px 8px
		background-color: #fff
		p
			color: #999
			font-size: 14px
		.code
			color: #333
			font-size: 16px
			vertical-align: -1px
		.status
			background-color: #c00
			color: #fff
			padding: 1px 5px
			border-radius: 2px
			font-size: 12px
		.price
			float: right
			color: #f90
			font-size: 10px
			strong
				font-size: 18px
				margin-left: 2px
				font-weight: normal
		.time
			position: absolute
			right: 15px
			bottom: 5px
			font-size: 12px
			color: #bbb
	.actions
		display: flex
		border-top: 0.5px solid #ccc
		box-shadow: 0 -0.5px 0 #ccc
		padding: 5px 0
		background-color: #fff
		span
			flex: 1
			&:last-child
				border-left: 0.5px solid #ccc
				box-shadow: -0.5px 0 0 #ccc
				i
					vertical-align: -1px
			a
				display: block
				margin: 0 5px
				height: 30px
				line-height: 30px
				text-align: center
				font-size: 14px
				border-radius: 3px
				color: #5d446f
				i
					margin-right: 5px
	.tour-info
	.contacts
	.users
		margin-top: 10px
		background-color: #fff
	.tour-info
		position: relative
		display: block
		padding: 10px 40px 10px 15px
		text-decoration: none
		h3
			line-height: 24px
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
		p
			line-height: 24px
			color: #999
		.icon
			position: absolute
			right: 10px
			top: 50%
			margin-top: -8px
			transform: rotate(180deg)
			font-size: 16px
			line-height: 1
			color: #DBD4C4
	.contacts
		display: flex
		line-height: 36px
		font-size: 14px
		padding: 5px 0 5px 15px
		&>span
			&:first-child
				flex: 3
				span
					font-size: 12px
					color: #999
					margin-right: 10px
				.icon
					float: right
					margin-right: 10px
					transform: rotate(180deg)
					font-size: 16px
					color: #DBD4C4
			&:last-child
				flex: 1
				border-left: 0.5px solid #ddd
				box-shadow: -0.5px 0 0 #ddd
				a
					display: block
					height: 36px
					margin: 0 15px 0 10px
					border-radius: 2px
					color: #f90
					text-align: center
					line-height: 36px
					i:before
						font-size: 24px
	.users
		h3
			line-height: 40px
			padding: 0 15px
			font-size: 16px
			color: #666
			border-bottom: 0.5px solid #f5f2ec
			box-shadow: 0 0.5px 0 #f5f2ec
			i
				margin-right: 5px
				color: #aaa
				vertical-align: 0px
			small
				font-size: 12px
				color: #999
				display: none
		li
			line-height: 40px
			font-size: 14px
			border-bottom: 0.5px solid #ddd
			box-shadow: 0 0.5px 0 #ddd
			margin-left: 15px
			em
				margin-left: 10px
				font-size: 12px
				color: #999
			&:last-child
				border-bottom: none
				box-shadow: none