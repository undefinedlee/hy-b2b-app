#order-info
	color: #333
	h3
	p
		margin: 0
		line-height: 30px
	h3
		color: #333
		font-weight: normal
		font-size: 14px
	.order-info
		position: relative
		padding: 10px 15px 30px
		background-color: #fff
		p
			color: #999
			font-size: 12px
		.code
			color: #333
			font-size: 14px
		.status
			margin-left: 10px
			background-color: #c00
			color: #fff
			padding: 1px 5px
			border-radius: 2px
		.price
			float: right
			color: #f90
			font-size: 10px
			strong
				font-size: 16px
				margin-left: 2px
		.time
			position: absolute
			right: 15px
			bottom: 5px
			font-size: 12px
			color: #bbb
	.tour-info
	.contacts
	.users
		margin-top: 10px
		background-color: #fff
	.tour-info
		position: relative
		display: block
		padding: 10px 40px 10px 15px
		text-decoration: none
		h3
			line-height: 24px
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
		p
			line-height: 24px
			color: #999
		.icon
			position: absolute
			right: 10px
			top: 50%
			margin-top: -8px
			transform: rotate(180deg)
			font-size: 16px
			line-height: 1
			color: #DBD4C4
	.contacts
		display: block
		line-height: 46px
		font-size: 14px
		padding-left: 15px
		span
			font-size: 12px
			color: #999
			margin-right: 10px
		.icon
			float: right
			margin-right: 10px
			transform: rotate(180deg)
			font-size: 16px
			color: #DBD4C4
	.users
		h3
			border-bottom: 0.5px solid #ccc
			box-shadow: 0 0.5px 0 #ccc
			line-height: 40px
			padding: 0 15px
			small
				font-size: 12px
				color: #999
		li
			line-height: 40px
			font-size: 14px
			border-bottom: 0.5px solid #ccc
			box-shadow: 0 0.5px 0 #ccc
			margin-left: 15px
			em
				margin-left: 10px
				font-size: 12px
				color: #999
			&:last-child
				border-bottom: none
				box-shadow: none
	.actions
		display: flex
		margin: 10px 0
		span
			flex: 1
			a
				display: block
				margin: 0 5px
				height: 40px
				line-height: 40px
				background-color: #f90
				color: #fff
				text-align: center
				font-size: 14px
				border-radius: 3px