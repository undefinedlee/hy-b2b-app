#order-list
    .order-item
        display: block
        position: relative
        margin: 10px
        padding: 10px 36px 10px 15px
        background-color: #fff
        color: #333
        box-shadow: 0 1px 3px rgba(0, 0, 0, .1)
        border-radius: 3px
        text-decoration: none
        p
            margin: 5px 0
        .tour-name
            font-size: 14px
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis
            margin-bottom: 8px
        .infos
            display: flex
            .info-item
                flex: 1
                text-align: center
                font-size: 12px
                color: #999
                &:first-child
                    text-align: left
                &:last-child
                    text-align: right
                strong
                    font-size: 14px
                    font-weight: normal
                    color: #333
            .price
                color: #f90
                font-size: 10px
                strong
                    font-size: 14px
                    margin-left: 2px
                    color: #f90
            .danger
                color: #e00
        .icon
            position: absolute
            right: 10px
            top: 50%
            margin-top: -8px
            transform: rotate(180deg)
            font-size: 16px
            line-height: 1
            color: #DBD4C4