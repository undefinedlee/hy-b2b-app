#product-booking-info
	color: #333
	.group
		background-color: #fff
		margin-top: 10px
		.input-item
			position: relative
			display: block
			margin: 0 0 0 15px
			padding: 10px 31px 10px 40px
			height: 66px
			line-height: 46px
			border-bottom: 0.5px solid #ccc
			box-shadow: 0 0.5px 0 #ccc
			&:last-child
				border-bottom: none
				box-shadow: none
		.name
			position: absolute
			left: 0
			top: 10px
			font-size: 14px
			color: #999
		.value
			display: block
			text-align: center
			font-size: 18px
		.input-item-small
			padding: 0 31px 0 40px
			height: 46px
			.name
				top: 0
			.icon
				position: absolute
				top: 0
				right: 15px
				transform: rotate(180deg)
				font-size: 16px
				color: #DBD4C4
	.price-bar
		text-align: right
		color: #999
		font-size: 12px
		margin: 10px 15px
		span
			font-size: 10px
			color: #f90
		strong
			font-size: 16px
	.bar-footer
		background-image: none
		height: 54px
		.booking-btn
			flex: 1
			height: 44px
			line-height: 44px
			text-align: center
			background-color: #f90
			color: #fff
			font-size: 18px
			border-radius: 3px
			padding-left: 84px
			em
				font-size: 10px
				vertical-align: middle
				margin-left: 10px