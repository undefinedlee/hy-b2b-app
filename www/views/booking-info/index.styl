#product-booking-info
	color: #333
	.group
		background-color: #fff
		.input-item
			position: relative
			display: block
			margin: 0 0 0 15px
			padding: 5px 0 5px 40px
			height: 56px
			line-height: 46px
			border-bottom: 0.5px solid #ccc
			box-shadow: 0 0.5px 0 #ccc
			&:last-child
				border-bottom: none
				box-shadow: none
		.name
			position: absolute
			left: 0
			top: 5px
			font-size: 14px
			color: #999
		.value
			border: none
			font-size: 18px
			width: 100%
			height: 46px
			background-color: transparent
	.bar-footer
		background-image: none
		height: 54px
		border-top: 0.5px solid #ccc
		box-top: 0 0.5px 0 #ccc
		.booking-btn
			flex: 1
			height: 44px
			line-height: 44px
			text-align: center
			background-color: #f90
			color: #fff
			font-size: 18px
			border-radius: 3px