.category-checkbox-tabs
.category-checkbox-panel
	position: absolute
	top: 0
	bottom: 0
.category-checkbox-tabs
	left: 0
	width: 80px
	//box-shadow: 0.5px 0 0 #ccc inset
	//border-right: 0.5px solid #ccc
	box-sizing: border-box
	z-index: 1
	a
		display: block
		height: 46px
		line-height: 46px
		padding: 0 15px
		box-shadow: 0 0.5px 0 #fff
		border-bottom: 0.5px solid #fff
		font-size: 16px
		color: #555
		//border-left: 3px solid #999
	.current
		position: relative
		background-color: #fff
		border-bottom: none
		//border-color: #5d446f
		box-shadow: -2px 1px 2px rgba(0, 0, 0, .1)
		color: #333
	.has-checked
		position: relative
		&:before
			content: " "
			position: absolute
			width: 6px
			height: 6px
			border-radius: 3px
			background-color: #f90
			left: 5px
			top: 20px
.category-checkbox-panel
	left: 80px
	right: 0
	background-color: #fff
	box-shadow: -1px 0 3px rgba(0, 0, 0, .1)
	.scroll-content
		padding: 10px 0 10px 10px
		.scroll
			padding: 0
	a
		float: left
		width: 82px
		padding: 4px 8px
		height: 36px
		font-size: 10px
		line-height: 14px
		text-align: center
		border: 0.5px solid #ccc
		box-shadow: 0.5px 0.5px 0 #ccc,-0.5px -0.5px 0 #ccc
		color: #666
		border-radius: 2px
		margin: 0 10px 10px 0
		background-color: #f9f9f9
		//overflow: hidden
		//white-space: nowrap
		//text-overflow: ellipsis
		.icon
			display: none
	.item-1
	.item-2
	.item-3
		font-size: 16px
		line-height: 36px
		padding: 0 8px
	.item-4
		font-size: 15px
		line-height: 36px
		padding: 0 8px
	.item-5
		font-size: 13px
		line-height: 36px
		padding: 0 8px
	.item-6
		font-size: 10px
		line-height: 36px
		padding: 0 8px
	.checked
		position: relative
		border-color: #090
		box-shadow: 0.5px 0.5px 0 #090,-0.5px -0.5px 0 #090
		color: #090
		overflow: hidden
		.icon
			display: block
			position: absolute
			right: 0
			bottom: -1px
			font-size: 14px
			line-height: 1
		