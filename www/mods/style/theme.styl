html
body
.pane
.view
	background-color: #f5f2ec
.bar-primary
	position: absolute
	width: 100%
	height: 44px
	background-color: rgba(66, 38, 89, .85)
	z-index: 1
	//-webkit-backdrop-filter: blur(4px)
	&.hide
		display: none
	.bar-header
		background-color: transparent
	.title
		color: #fff
	.button
		font-size: 16px
		border-color: transparent
		background-color: transparent
		color: #fff
		&.active
		&.activated
			border-color: transparent
			background-color: transparent
			box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1)
		&.button-clear
			border-color: transparent
			background: none
			box-shadow: none
			color: #fff
			font-size: 17px
		&.button-icon
			border-color: transparent
			background: none
		//&:hover
		//	color: #fff
		//	text-decoration: none
		.icon
			&:before
			&:after
				font-size: 20px
	.buttons-full
		margin: -5px
		.button
			border-radius: 0
	.button-light
		background-color: #f90
		padding: 0 15px
	.back-text
		font-size: 14px
		vertical-align: 1px
	.search-bar
		margin: 0
		padding: 0
		border: none
		background: transparent
		overflow: initial
		.icon
			position: absolute
			left: 0
			top: 5px
			width: 40px
			height: 34px
			line-height: 34px
			text-align: center
			font-size: 18px
			color: #5d446f
		input
			width: 100%
			padding: 5px 0 5px 40px
			border-radius: 3px
			border: none
			//background-color: transparent
			background-color: rgba(255, 255, 255, .3)
			color: #5d446f
			height: 34px
			line-height: 24px
			box-sizing: border-box
			margin: 5px 0
        	transition: 200ms linear background-color
			&::-webkit-input-placeholder
				color: #5d446f
			&:focus
				background-color: #fff
				color: #333
.view-container
	z-index: 0
.scroll-content
	top: 0
	.scroll
		padding-top: 44px
.no-header
	.scroll
		padding-top: 0
.has-tabs
	bottom: 0
	.scroll
		padding-bottom: 49px
.tabs-primary > .tabs
.tabs.tabs-primary
	//background-color: #e4dfd6
	background-color: rgba(228, 223, 214, 0.95)
	background-image: linear-gradient(180deg, #B5A891, #B5A891 50%, transparent 50%)
	color: #5d446f
	padding-top: 0
	.tab-item
		line-height: 1
		opacity: 1
		padding-top: 5px
		.icon
			font-size: 28px
			height: 28px
			line-height: 1
			-webkit-text-stroke-width: 0
		.tab-title
			display: block
			margin-top: 1px
			font-size: 10px
		&.activated
			background-color: #DAD3C9
			box-shadow: 1px 1px 2px rgba(0, 0, 0, .1) inset
			.icon
			.tab-title
				transform: translate3d(1px, 1px, 0)
	.tab-item-active
		color: #EC8600
		transition: 0.1s linear color
.platform-ios8
	.tabs-primary > .tabs
	.tabs.tabs-primary
		background-color: rgba(228, 223, 214, 0.5)
		-webkit-backdrop-filter: blur(4px)
.placeholder
	color: #bbb