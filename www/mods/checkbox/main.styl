.checkbox-panel
	a
		display: block
		height: 46px
		line-height: 46px
		font-size: 16px
		margin-left: 15px
		padding: 0
		border-bottom: 0.5px solid #bbb
		box-shadow: 0 0.5px 0 #bbb
		color: #555
		.icon
			float: right
			color: #ddd
			margin-right: 15px
		&.activated
			transform: translate3d(1px, 1px, 0)
	.checked
		color: #090
		font-weight: bold
		.icon
			color: #090